datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String   @id @default(auto()) @map("_id") @testable
  email       String   @unique
  name        String?
  password    String?
  todos       Todo[]
}

model Todo {
  id          String   @id @default(auto()) @map("_id") @testable
  title       String
  completed   Boolean  @default(false)
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}
